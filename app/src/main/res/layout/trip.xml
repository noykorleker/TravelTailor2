<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="320dp">
    <ImageView
        android:id="@+id/trip_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/wine"/>
    <TextView
        android:id="@+id/trip_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Visit the winery"
        android:textColor="#262627"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/trip_description"
        android:text="Discover the world of wine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#262627"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/trip_name"
        app:layout_constraintTop_toBottomOf="@+id/trip_name"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start trip"
        app:layout_constraintEnd_toEndOf ="@+id/trip_image"
        app:layout_constraintBottom_toBottomOf="@+id/trip_image"
        android:layout_margin="20dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>